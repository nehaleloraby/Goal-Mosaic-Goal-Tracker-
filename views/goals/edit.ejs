<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit Goal</h1>

    <div class="btn-toolbar mb-2 mb-md-0">
    </div>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">New Goal</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<form action="/edit/<%= goal._id %>?_method=PUT" method="POST">
    <div class="form-group mb-4">
        <label for="goal">Goal</label>
        <input type="text" class="form-control" id="goal" name="goal" value="<%= goal.goal %>" placeholder="Enter Goal" required>
    </div>

    <div class="form-group mb-4">
        <label for="description">Goal Description</label>
        <textarea class="form-control" id="description" name="description" rows="4" placeholder="Enter Goal Description"><%= goal.description %></textarea>
    </div>

    <div class="form-group mb-4">
        <label for="deadline">Deadline</label>
        <input type="date" class="form-control" id="deadline" name="deadline" value="<%= goal.deadline %>" required>
    </div>

    <div class="form-group mb-4">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" name="category" value="<%= goal.category %>" placeholder="Enter Goal Category">
    </div>

    <div class="form-group mb-4">
        <label for="progress">Progress</label>
        <select class="form-control" id="progress" name="progress">
            <option value="In Progress">In Progress</option>
            <option value="Completed">Completed</option>
        </select>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary" name="action" value="update">Update Goal</button>
    </div>
</form>

<form action="/edit/<%= goal._id %>?_method=DELETE" method="POST" style="display: inline;">
    <button type="submit" class="btn btn-danger" name="action" id="deleteButton" value="delete" onclick="return confirm('Are you sure you want to delete this goal?')">Delete Goal</button>
</form>


