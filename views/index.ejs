<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
    <div class="btn-toolbar mb-2 mb-md 0">
      <div class="btn-group me-2">
        <a href="/add" class="btn btn-sm btn-outline-secondary">+ New Goal</a>
      </div>
    </div>
  </div>

<div class="table-responsive">
    
    <table class="table table-striped table-sm ">
        <thead>
            <tr>
                <th scope="col">Goal</th> 
                <th scope="col">Description</th> 
                <th scope="col">Deadline</th> 
                <th scope="col">Category</th> 
                <th scope="col">Progress</th> 
                <th scope="col">Actions</th> 
            </tr>
        </thead>
        <tbody>
            <% goals.forEach(element => { %>
                <tr>
                    <td><%= element.goal %></td>
                    <td><%= element.description %></td>
                    <td><%= element.deadline %></td>
                    <td><%= element.category %></td>
                    <td><%= element.progress %></td>
                    <td>
                        <div class="d-flex flex-row gap-2">
                            <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                                <i class="bi bi-eye"></i> View
                            </a>

                            <a href="/edit/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <form action="/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                                <button type="submit" class="btn btn-danger btn-small">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
